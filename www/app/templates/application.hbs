<!-- Fixed navbar -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <a class="navbar-brand" href="#">Ξnix</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        {{#active-li currentWhen='index'}}
          <a class="nav-link">
            {{#link-to 'index'}}
              <i class="fa fa-home"></i> Home
            {{/link-to}}
          </a>
        {{/active-li}}
      </li>

      <li class="nav-item">
        {{#active-li class="nav-item" currentWhen='help'}}
          <a class="nav-link">
            {{#link-to 'help'}}
              <i class="fa fa-rocket"></i> Help (Coming Soon)
            {{/link-to}}
          </a>
        {{/active-li}}
      </li>

      {{#active-li class="nav-item" currentWhen='blocks'}}
        {{#link-to 'blocks'}}
          <i class="fa fa-cubes"></i> Pending Blocks
          {{#if immatureTotal}}
            <span class="badge alert-success">{{immatureTotal}}</span>
          {{/if}}
        {{/link-to}}
      {{/active-li}}

      {{#active-li currentWhen='payments'}}
        {{#link-to 'payments'}}
          <i class="fa fa-paper-plane-o"></i> Recent Payouts
        {{/link-to}}
      {{/active-li}}

      {{#active-li class="nav-item" currentWhen='miners'}}
        {{#link-to 'miners'}}
          <i class="fa fa-users"></i> Miners Online
        {{/link-to}}
      {{/active-li}}

      {{#active-li class="nav-item" currentWhen='about'}}
        {{#link-to 'about'}}
          <i class="fa fa-comments"></i> About Us <span class="badge alert-success">&#x2713;</span>
        {{/link-to}}
      {{/active-li}}
    </ul>
    <form class="form-inline my-2 my-lg-0">
      {{input value=cachedLogin class="form-control mr-sm-2" placeholder="Enter Your Enix Address"}}
      <button type="button" class="btn btn-success" {{action 'lookup' cachedLogin}}>Submit</button>
    </form>
  </div>
</nav>

